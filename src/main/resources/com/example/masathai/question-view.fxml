   <children>
      <BorderPane layoutX="1.0" layoutY="1.0" prefHeight="500.0" prefWidth="800.0">
         <left>
            <Pane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: purple;" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="questionNoDisplay" layoutX="8.0" layoutY="87.0" text="Question" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label fx:id="questionTextDisplay" layoutX="11.0" layoutY="140.0" prefHeight="180.0" prefWidth="378.0" text="In Thai cuisine what is the popular noodle dish often served with a tamarind-based broth and garnished with lime peanuts and chili?" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="100.0" layoutY="281.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </Pane>
         </left>
         <right>
            <Pane prefHeight="500.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="14.0" layoutY="69.0" prefHeight="82.0" prefWidth="136.0" text="Options">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="opt1" layoutX="14.0" layoutY="169.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="350.0" text="Option 1">
