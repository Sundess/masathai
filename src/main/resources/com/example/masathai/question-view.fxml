                        <Font size="16.0" />
                     </font></RadioButton>
                  <Button fx:id="prevBtn" layoutX="14.0" layoutY="446.0" mnemonicParsing="false" onAction="#prevClick" text="Prev" />
                  <Button fx:id="nextBtn" layoutX="334.0" layoutY="446.0" mnemonicParsing="false" onAction="#nextClick" text="Next" />
                  <Label layoutX="252.0" layoutY="14.0" prefHeight="42.0" prefWidth="137.0" text="3:00 second">
