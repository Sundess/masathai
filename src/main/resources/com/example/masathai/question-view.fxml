                        <ToggleGroup fx:id="options" />
                     </toggleGroup>
                     <font>
                        <Font size="16.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="opt2" layoutX="14.0" layoutY="209.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="350.0" text="Option 2" toggleGroup="$options">
                     <font>
                        <Font size="16.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="opt3" layoutX="14.0" layoutY="250.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="350.0" text="This is option 3" toggleGroup="$options">
                     <font>
                        <Font size="16.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="opt4" layoutX="14.0" layoutY="290.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="350.0" text="This is option 4" toggleGroup="$options">
